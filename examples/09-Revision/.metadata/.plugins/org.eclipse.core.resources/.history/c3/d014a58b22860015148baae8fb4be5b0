
public class Task2 {
	
	public static void main(String[] arg){
		int[][] matrix = {
				{1, 3, 8},
				{6, 8, 9},
				{2, 5, 6}
		};
		
		int max = Integer.MIN_VALUE;
		int maxRow = 0;
		int maxCol = 0;
		
		int min = Integer.MAX_VALUE;
		int minRow = 0;
		int minCol = 0;
		
		for (int row = 0; row < matrix.length; row++) {
			for (int j = 0; j < matrix[row].length; j++) {
				if(matrix[row][j] > max){
					max = matrix[row][j];
					maxRow = row;
					maxCol = j;
				}
				if(matrix[row][j] < min){
					min = matrix[row][j];
					minRow = row;
					minCol = j
				}
			}
		}
	}

}
